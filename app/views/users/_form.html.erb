    <td>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.text_field :email %>
      </div>
    </td>
  </tr>
  <tr>
    <td>
      <div class="field">
        <%= f.label :password %><br />
        <%= f.text_field :password %>
      </div>
    </td>
    <td>
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.text_field :password_confirmation %>
      </div>
    </td>
  </tr>
  <tr>
    <td>
      <div class="field">
        <%= f.label :app_role_id %><br />
