<table class="pretty">
<caption> 
    Users <%= link_to image_tag("/images/add.png", :border => 0, :width => 30, :height => 30, :align => "right"), new_user_path%>
</caption>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Role</th>
    <th>Enabled</th>
    <th>Airline</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.app_role.code %></td>
    <td><%= user.enabled %></td>
    <td><%= user.airline.code %></td>
    <td><%= link_to image_tag("/images/info.png", :border => 0, :width => 16, :height => 16), user %></td>
    <td><%= link_to image_tag("/images/edit.png", :border => 0, :width => 16, :height => 16), edit_user_path(user) %></td>
    <td><%= link_to image_tag("/images/delete.png", :border => 0, :width => 16, :height => 16), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>